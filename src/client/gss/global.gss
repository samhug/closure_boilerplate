@def BG_COLOR              rgb(235, 239, 249);

* { box-sizing: border-box; -moz-box-sizing: border-box }

html {
    height: 100%;
    /* background: #aaa; */
    background-color: BG_COLOR;
}

body {
    min-height: 100%;
    margin: 0;
    font: 1em/1.4 sans-serif;
    overflow-y: scroll;
    background-attachment: fixed;
}
